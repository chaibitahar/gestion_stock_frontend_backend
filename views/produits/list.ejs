<%- include('../partials/header') %>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>ðŸ“¦ Gestion des Produits</h2>
        <a href="/produits/ajouter" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Ajouter un produit
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Nom du produit</th>
                        <th>QuantitÃ©</th>
                        <th>Prix</th>
                        <th>CatÃ©gorie</th>
                        <th>Fournisseur</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(typeof produits !== 'undefined' && produits.length > 0) { %>
                        <% produits.forEach(produit => { %>
                            <tr>
                                <td class="fw-bold"><%= produit.nom %></td>
                                
                                <td>
                                    <% if(produit.quantite <= 5) { %>
                                        <span class="badge bg-danger"><%= produit.quantite %></span>
                                    <% } else { %>
                                        <span class="badge bg-success"><%= produit.quantite %></span>
                                    <% } %>
                                </td>
                                
                                <td><%= produit.prix %> $</td>
                                
                                <td>
                                    <%= produit.Categorie ? produit.Categorie.nom : 'Non catÃ©gorisÃ©' %>
                                </td>
                                <td>
                                    <%= produit.Fournisseur ? produit.Fournisseur.nom : 'Inconnu' %>
                                </td>
                                
                                <td class="text-end">
                                    <a href="/produits/edit/<%= produit.id %>" class="btn btn-sm btn-warning me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/produits/delete/<%= produit.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ce produit ?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="fas fa-box-open fa-3x mb-3"></i><br>
                                Aucun produit dans le stock pour l'instant.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>